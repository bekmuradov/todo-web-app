  "description": "Express server with Postgresql, Sequelize and Authentication",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/nodemon/bin/nodemon.js src/index.js --exec 'yarn run lint && node'",
    "lint": "./node_modules/.bin/eslint ./*.js",
    "lint:fix": "eslint --fix --ext .js,.jsx .",
    "test": "jest --runInBand --verbose --detectOpenHandles"
  },
  "repository": "https://github.com/bekmuradov/todo-web-app.git",
  "author": "Beck",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.0-alpha.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "jest": "^27.4.3",
    "jest-extended": "^1.2.0",
    "nodemon": "^2.0.15",
    "sequelize-cli": "^6.3.0",
    "supertest": "^6.1.6"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500"
